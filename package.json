{
  "name": "ams-ssk",
  "version": "1.0.0",
  "description": "NestJS AMS Library for file management",
  "author": "Mad_man",
  "keywords": [
    "nestjs",
    "library",
    "ams",
    "files",
    "asset-management"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mad_man/ams.git"
  },
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=8192 ./dist/index.js",
    "start:node": "ts-node index.ts",
    "dev": "nodemon --exec ts-node src/main.ts",
    "prebuild": "rm -rf dist",
    "build": "nest build --config tsconfig.build.json",
    "build:lib": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --ignore-pattern eslint.config.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "npm run build",
    "prepublish": "npm run prepare",
    "preversion": "npm run lint",
    "postpublish": "echo 'Package published!'"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^5.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.0.0"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.0.3",
    "archiver": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jsdom": "^26.0.0",
    "mime-types": "^2.1.35",
    "sharp": "^0.33.5",
    "typescript-eslint": "^8.26.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.2",
    "@nestjs/common": "^10.0.7",
    "@nestjs/core": "^10.0.7",
    "@nestjs/platform-express": "^10.0.7",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.7",
    "@types/archiver": "^6.0.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}